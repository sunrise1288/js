import java.util.Scanner;

public class SnailClimb {
public static void main(String[] args) {
Scanner scanner = new Scanner(System.in);

System.out.print("Высота шеста (h метров): ");
int h = scanner.nextInt();

System.out.print("Дневной подъем (a метров): ");
int a = scanner.nextInt();

System.out.print("Ночной спуск (b метров): ");
int b = scanner.nextInt();

int days = (h - a - 1) / (a - b) + 2;

System.out.println("Улитка достигнет вершины на " + days + " день(дней).");
}
}
